# Local Environment Variables for DaisyDog Development
# IMPORTANT: Rename this file to .env.local for it to work
# NEVER commit real API keys to version control

# Google Gemini API Key (for enhanced AI responses)
# Get your key from: https://makersuite.google.com/app/apikey
# WARNING: Replace 'your_actual_api_key_here' with your real key
VITE_GEMINI_API_KEY=your_actual_api_key_here

# Debug Mode (optional)
VITE_DEBUG_MODE=true

# Child Safety Mode (recommended)
VITE_CHILD_SAFETY_MODE=true

# Default User Age for Safety Features
VITE_DEFAULT_USER_AGE=12

# Legacy API Keys (if you have them - optional)
# VITE_ANTHROPIC_API_KEY=your_anthropic_key_here
# VITE_OPENAI_API_KEY=your_openai_key_here

# SECURITY NOTES:
# - Never commit this file with real API keys
# - Add .env.local to your .gitignore
# - Rotate API keys regularly
# - Use restricted API keys when possible
# - Monitor API usage for unauthorized access

# DaisyDog Environment Variables Example
# Copy this file to .env and fill in your actual values

# Anthropic API Configuration
VITE_ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Key (For moderation and secondary AI)
VITE_OPENAI_API_KEY=your_openai_api_key_here

# Safety Configuration
VITE_CHILD_SAFETY_MODE=true
VITE_DEFAULT_USER_AGE=12
VITE_MAX_RESPONSE_LENGTH=500
VITE_ENABLE_SAFETY_METRICS=true

# Backend API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_API_BASE_URL_PROD=https://your-backend-url.com

# Supabase Configuration (if needed)
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Environment
NODE_ENV=development

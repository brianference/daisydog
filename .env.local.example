# DaisyDog Environment Variables
# Copy this file to .env.local and configure your settings

# === API KEYS ===
# Get your Gemini API key from: https://aistudio.google.com/app/apikey
VITE_GEMINI_API_KEY=your_actual_gemini_api_key_here

# Get your Bible API key from: https://scripture.api.bible/signup
VITE_BIBLE_API_KEY=your_bible_api_key_here

# Supabase configuration (optional)
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# === DEBUG SETTINGS ===
# Set to 'true' to enable detailed console logging for debugging
# Set to 'false' or remove for clean console (recommended for production)
VITE_DEBUG_MODE=false

# === SAFETY SETTINGS ===
# Child safety mode (recommended: true)
VITE_CHILD_SAFETY_MODE=true

# Default user age for safety filtering
VITE_DEFAULT_USER_AGE=12

# === VERSION INFO ===
VITE_VERSION=5.6.2
VITE_ENVIRONMENT=development

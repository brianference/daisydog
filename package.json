{
  "name": "daisydog",
  "private": true,
  "version": "6.2.0",
  "description": "Safe Google Gemini AI-powered virtual dog companion for children with comprehensive drug safety response system, Supabase database integration, enhanced child protection, educational safety guidance, trusted adult communication prompts, and integrated ReadKidz ebook access - Updated to new Gemini API",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:safety": "jest --testPathPattern=safety",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:mobile": "playwright test",
    "test:mobile:ui": "playwright test --ui",
    "test:mobile:debug": "playwright test --debug",
    "test:ios": "playwright test --project=\"iPhone 15 Pro\"",
    "test:android": "playwright test --project=\"Pixel 7\"",
    "test:firebase": "echo 'Firebase Test Lab requires mobile app build (APK/IPA). This is a web app - use Playwright for responsive testing instead: npm run test:playwright-extended'",
    "test:kobiton": "echo 'ðŸ”— Kobiton Community (FREE - Unlimited Manual Testing): https://portal.kobiton.com'",
    "test:appetize": "echo 'ðŸ”— Appetize.io (FREE - 100 mins/month): https://appetize.io'",
    "test:playwright-extended": "playwright test --config=testing/playwright-extended/playwright.config.extended.ts",
    "test:visual-regression": "playwright test --config=testing/playwright-extended/playwright.config.extended.ts --grep=Visual",
    "test:safety-automated": "playwright test --config=testing/playwright-extended/playwright.config.extended.ts testing/playwright-extended/tests/safety-filters.spec.ts",
    "test:all": "npm run build && npm run test && npm run test:mobile && npm run test:playwright-extended",
    "test:daily": "npm run build && npm run test:safety-automated",
    "pre-deploy": "bash scripts/pre-deploy-check.sh",
    "setup:apis": "node scripts/setup-apis.js",
    "version": "echo 'Daisy Dog v4.1.0 - Read the Book Integration & Enhanced Educational Features'"
  },
  "homepage": "https://brianference.github.io/daisydog",
  "keywords": [
    "ai",
    "children",
    "safety",
    "chat",
    "education",
    "virtual-pet",
    "child-safe",
    "dog-facts",
    "interactive-games",
    "educational",
    "gemini",
    "google-ai",
    "content-moderation",
    "hunger-system",
    "game-interactions"
  ],
  "author": "Brian Ference",
  "license": "MIT",
  "dependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@google/genai": "^1.21.0",
    "@neondatabase/serverless": "^1.0.2",
    "@netlify/plugin-lighthouse": "^6.0.3",
    "@playwright/test": "^1.55.1",
    "@replit/object-storage": "^1.0.0",
    "@supabase/supabase-js": "^2.57.4",
    "@tanstack/react-query": "^5.59.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^4.2.1",
    "drizzle-orm": "^0.44.5",
    "framer-motion": "^10.16.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "netlify-cli": "^23.8.1",
    "netlify-plugin-cache": "^1.0.3",
    "netlify-plugin-checklinks": "^4.1.1",
    "openai": "^6.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0",
    "react-router-dom": "^6.8.0",
    "serve": "^14.2.5",
    "use-sound": "^4.0.4",
    "vite": "^6.0.0",
    "wait-on": "^9.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brianference/daisydog.git"
  },
  "bugs": {
    "url": "https://github.com/brianference/daisydog/issues"
  }
}
